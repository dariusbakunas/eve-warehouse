{
  "name": "starter-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@google-cloud/secret-manager": "^3.1.0",
    "@sentry/node": "^5.15.5",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-context": "^1.0.20",
    "apollo-link-http": "^1.5.17",
    "express": "^4.17.3",
    "express-session": "^1.17.1",
    "graphql": "^15.3.0",
    "graphql-tag": "^2.11.0",
    "helmet": "^3.22.0",
    "http-proxy-middleware": "^1.0.3",
    "isomorphic-fetch": "^2.2.1",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "passport": "^0.4.1",
    "passport-auth0": "^1.3.2",
    "winston": "^3.2.1"
  },
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"nodemon\" \"yarn start:client\"",
    "build": "rm -rf ./build-server/ && cd client && yarn schema:types && cd .. && yarn run build:server && yarn run build:client",
    "gcp-build": "yarn build",
    "postinstall": "cd client && yarn",
    "build:server": "tsc --project ./tsconfig.json",
    "build:client": "cd client && yarn build && cp -R ./build/* ../build-server/client && rm -rf ./build",
    "start": "node --max-http-header-size=80000 build-server/server/index.js",
    "start:client": "cd client && yarn start",
    "test": "cd client && yarn test",
    "analyse": "source-map-explorer build-server/client/static/js/*.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/__generated__"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/express-session": "^1.17.3",
    "@types/helmet": "^0.0.47",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/morgan": "^1.9.0",
    "@types/node": "^14.0.14",
    "@types/owasp-password-strength-test": "^1.3.0",
    "@types/passport": "^1.0.3",
    "@types/passport-auth0": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "apollo": "^2.27.3",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "husky": "^4.2.5",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "source-map-explorer": "^2.4.2",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.5"
  }
}
